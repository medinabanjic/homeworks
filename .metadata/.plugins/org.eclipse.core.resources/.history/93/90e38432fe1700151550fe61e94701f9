package ba.bitcamp.homework03.task01;

public class CampStringBuilder {

	private char[] characters;

	/**
	 * Constructor
	 * 
	 * @param characters
	 */
	public CampStringBuilder(char[] characters) {
		super();
		this.characters = characters;
	}

	/**
	 * Adds characters at the end of char array
	 * 
	 * @param o
	 */
	public void append(Object o) {
		String perm = "";
		
		for (int i = 0; i < characters.length; i++) {
			perm += Character.toString(characters[i]);
		}
		
		String word = perm + " " + o;
		System.out.println(word);
		
	}

	/**
	 * Adds character at the beggining of char array
	 * 
	 * @param o
	 */
	public void prepend(Object o) {
		System.out.println(o.toString() + this.toString());
	}

	/**
	 * Converts to string.
	 */
	public String toString() {
		String s = " ";
		for (int i = 0; i < characters.length; i++) {
			s += characters[i] + "";
		}
		return s;
	}

}

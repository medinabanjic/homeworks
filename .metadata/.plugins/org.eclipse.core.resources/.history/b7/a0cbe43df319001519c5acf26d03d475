package ba.bitcamp.homework03.task01;

public class Goal extends StoryElement {

	public static final int EASY = 0;
	public static final int HARD = 1;
	public static final int IMPOSSIBLE = 2;

	private int difficulty;
	private int toDo;
	private Character toDoWith;

	public Goal(String name, int difficulty, int toDo, Character toDoWith) {
		super(name);
		this.difficulty = difficulty;
		this.toDo = toDo;
		this.toDoWith = toDoWith;
	}

	/**
	 * Gets difficulty
	 * 
	 * @return difficulty
	 */
	public int getDificulty() {
		return difficulty;
	}

	public int getToDo() {
		return toDo;
	}

	public Character getToDoWith() {
		return toDoWith;
	}

	public void setDifficulty(int difficulty) {
		this.difficulty = difficulty;
	}

	public void setToDo(int toDo) {
		this.toDo = toDo;
	}

	public void setToDoWith(Character toDoWith) {
		this.toDoWith = toDoWith;
	}

	/**
	 * Gets name
	 * 
	 * @return name
	 */
	public String getGoalName() {
		return this.getName();
	}
}

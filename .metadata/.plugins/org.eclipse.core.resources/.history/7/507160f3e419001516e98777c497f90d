package ba.bitcamp.homework03.task01;

public class StoryTest {

	public static void main(String[] args) {
		//Creating 4 objects of class Character
				Character c1 = new Character("Mladen", "Male", true); 
				Character c2 = new Character("Gordan", "Male", true); 
				Character c3 = new Character("Ramiz", "Male", false); 
				Event e = new Event("Defeat");

				Goal g1 = new Goal(1, e, c1); 
				Protagonist p1 = new Protagonist("Medina", "Female", true, g1);
				p1.setEnemy(c3); 
				
				System.out.println(c1);
				c1.improveCapability();
				System.out.println();
				System.out.println(c1); 
				c1.killCharacter(); 
				System.out.println();
				System.out.println(c1); 
				System.out.println();
				
				
				p1.addHelper(c2); 
				
				
				System.out.println(p1.getHelpers()); 
				p1.accomplishGoal();
				
				

	}

}

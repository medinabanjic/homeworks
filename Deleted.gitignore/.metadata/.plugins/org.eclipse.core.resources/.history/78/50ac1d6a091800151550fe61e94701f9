package ba.bitcamp.homework03.task01;

import java.util.Arrays;

public class CampStringBuilder {

	private char[] characters;
	private int length;

	/**
	 * Constructor
	 * 
	 * @param characters
	 */
	public CampStringBuilder(char[] characters) {
		super();
		this.characters = characters;
		length = characters.length;
	}

	/**
	 * Adds characters at the end of char array
	 * 
	 * @param o
	 */
	public void append(Object o) {
		String perm = " " + o.toString();
		
		int counter = 0;
		for (int i = 0; i < length; i++) {
				counter++;
				if (characters[i] == ' '){
					characters[i] = perm.charAt(i - counter);
			}
		}
		
		System.out.println(Arrays.toString(characters));

	}

	/**
	 * Adds character at the beginning of char array
	 * 
	 * @param o
	 */
	public void prepend(Object o) {
		System.out.println(o.toString() + this.toString());
	}

	/**
	 * Converts to string.
	 */
	public String toString() {
		String s = " ";
		for (int i = 0; i < this.length; i++) {
			s += characters[i] + "";
		}
		return s;
	}

}
